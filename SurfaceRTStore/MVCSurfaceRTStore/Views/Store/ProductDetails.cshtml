@model MVCSurfaceRTStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product: @Model.ProductName</h2>

<ul>
    <li>
        <b>Specificaties:</b> @Model.Description
    </li>

    <li>
        <b>Prijs:</b> €@string.Format("{0:C}", Model.Price).Replace("$", "")
    </li>

</ul>
