@model MVCSurfaceRTStore.Models.LocalPasswordModel
@{
    ViewBag.Title = "Beheer account informatie";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

<p>U bent ingelogd als <strong>@User.Identity.Name</strong>.</p>
<strong>@Html.ActionLink("Wijzig persoonlijke gegevens", "ManageDetails", "Account")</strong>
<br />
<br />

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
